<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/fbButton"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="SignIn with Facebook"

        android:layout_marginTop="82dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#E8F4EE"/>

    <Button
        android:id="@+id/ShopCartButton"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="SignIn with ShoppingCart"

        android:layout_below="@+id/googleButton"
        android:layout_alignLeft="@+id/googleButton"
        android:layout_alignStart="@+id/googleButton"
        android:layout_marginTop="15dp"
        android:backgroundTint="#E8F4EE"/>

    <Button
        android:id="@+id/googleButton"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="SignIn with google"
        android:layout_below="@+id/fbButton"
        android:layout_alignLeft="@+id/fbButton"
        android:layout_alignStart="@+id/fbButton"
        android:layout_alignRight="@+id/fbButton"
        android:layout_alignEnd="@+id/fbButton"
        android:backgroundTint="#E8F4EE"/>

</LinearLayout>