
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.srikanth.shopping_cart.MainActivity"
    android:orientation="vertical">

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="top"
        android:padding="20dp">

        <Button
            android:id="@+id/groceries"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:background="@drawable/round_shape"
            android:layout_marginRight="20dp"
            android:textSize="12dp"
            android:text="Groceries"
            android:textColor="#f8fdf9" />

        <Button
            android:id="@+id/homeDecor"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:text="Home Decor"
            android:background="@drawable/round_shape"
            android:textColor="#2ECC71"
            android:textSize="12dp"
            android:backgroundTint="#F0F705"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/electronics"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:text="Electronics"
            android:textSize="12dp"
            android:backgroundTint="#2ECC71"
            android:background="@drawable/round_shape"
            android:textColor="#f8fdf9" />

    </TableRow>


    <GridView
        android:id="@+id/gv_items"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_marginTop="2dp"
        android:gravity="top"
        android:horizontalSpacing="4dp"
        android:numColumns="1"
        android:verticalSpacing="4dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_weight="1.51"></GridView>



</LinearLayout>